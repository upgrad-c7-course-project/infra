[bastion_servers]
bastion ansible_host=ec2-34-207-201-36.compute-1.amazonaws.com  ansible_user=ubuntu ansible_connection=ssh

[app_servers]
app     ansible_host=10.12.2.107  ansible_user=ubuntu ansible_connection=ssh ansible_ssh_private_key_file=~/.ssh/ansible.pem

[jenkin_servers]
jenkins ansible_host=10.12.2.101  ansible_user=ubuntu ansible_connection=ssh ansible_ssh_private_key_file=~/.ssh/ansible.pem


[docker_servers:children]
app_servers
jenkin_servers

[docker_servers:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ProxyCommand="ssh -W %h:%p ubuntu@ec2-34-207-201-36.compute-1.amazonaws.com"'
